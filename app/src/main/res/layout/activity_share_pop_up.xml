<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- 타이틀바 -->

    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <!-- Notice -->

    <!-- 닫기 버튼 -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/share_title"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/share_title"
        tools:srcCompat="@drawable/share_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="instaClick"
        android:orientation="horizontal">

        <Button
            android:id="@+id/insta_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/instagram_icon"
            android:gravity="center"
            android:onClick="instaClick"
            android:padding="16dp"
            android:textColor="#ff7a00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="gallaryClick"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gallary_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gal_btn"
            android:onClick="gallaryClick" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gallery" />

    </LinearLayout>

    <Button
        android:id="@+id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/close_pop"
        android:onClick="closeClick" />

    <!--// 닫기 버튼 -->
</LinearLayout>

