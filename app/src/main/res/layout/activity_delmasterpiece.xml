<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DelMasterpieceActivity" android:orientation="vertical">

    <TextView
            android:text="select delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <GridView
            android:layout_width="match_parent"
            android:layout_height="489dp"
            android:numColumns="auto_fit"
            android:id="@+id/delMasterpieceList"
            android:choiceMode="multipleChoiceModal"
            tools:listitem="@layout/checkmasterpiece">
    </GridView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/delBtn" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>