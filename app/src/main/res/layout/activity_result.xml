<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity" android:orientation="vertical">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:color/transparent"
            android:id="@+id/resultImage"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <Button
                android:text="close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/close_btn" android:layout_weight="0"/>
        <Button
                android:text="SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/save_btn" android:layout_weight="0"/>
    </LinearLayout>
</LinearLayout>